<p id="notice"><%= notice %></p>

<h1>Linx DataBase</h1>
<div class="table-responsive">
  <table class="table">
  <p>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%= link_to link.url, link.url %></td>
        <td class="nav nav-pills pull-right"><%= link_to 'Show', link %></td>
        <% if link.user == current_user %>
        <td class="nav nav-pills pull-right"><%= link_to 'Edit', edit_link_path(link) %></td>
        <td class="nav nav-pills pull-right"><%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</p>
</table>
</div>

<br>
